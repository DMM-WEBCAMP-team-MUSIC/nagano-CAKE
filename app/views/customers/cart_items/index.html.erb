<h2>ショッピングカート</h2>
<!--カートを空にする-->
<div></div>

<!--カート商品一覧-->
<table>
  <thead>
     <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
     </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
     <tr>
         <td><%= attachment_image_tag(cart_item.item.image, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
             <% cart_item.item.name %>
         </td>
         <td>
             <% cart_item.item.price %>
         </td>
         <td>
             <% cart_item.quantity %>
             <% %>
         </td>
         <td>
             
         </td>
         <td></td>
     </tr>
  </tbody>
</table>
