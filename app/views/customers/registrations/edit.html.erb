<div class="container">
  <div class="row pt-4">
    <div class="col-2">
      <h4>会員情報編集</h4>
    </div>
  </div>
</div>
<div class="container p-5 text-light">
  <%= form_with model: @customer, url:customers_path, local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-2">
        <strong><%= f.label :氏名 %></strong>
      </div>
      <div class="col-4">
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
      </div>
      <div class="col-4">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-2">
        <strong><%= f.label :フリガナ %></strong>
      </div>
      <div class="col-4">
        <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
      </div>
      <div class="col-4">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-2">
        <strong><%= f.label :郵便番号 %></strong>
      </div>
      <div class="col-6">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-2">
        <strong><%= f.label :住所 %></strong>
      </div>
      <div class="col-6">
        <%= f.text_field :address, :size => "40*40", autofocus: true, autocomplete: "address" %>
      </div>
    </div>
    <div class="row mt-2">
       <div class="col-2">
        <strong><%= f.label :電話番号 %></strong>
      </div>
      <div class="col-6">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-2">
        <strong><%= f.label :メールアドレス %></strong>
      </div>
      <div class="col-8">
        <%= f.email_field :email, :size => "40*40", autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 text-right">
        <%= f.submit "編集内容を保存", class: "alert alert-warning" %>
      </div>
      <div class="col-4">
        <%= link_to ("customers/unsubscribe") do %>
          <button class="alert alert-danger">退会する</button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
