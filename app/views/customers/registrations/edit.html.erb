<div class="container">
  <div class="row pt-4">
    <div class="col-2">
      <h4>会員情報編集</h4>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= form_with model: @customer, url:customers_path, local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="col-2">
        <%= f.label :氏名 %>
      </div>
      <div class="col-6">
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
      </div>
      <div class="col-6">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    <% end %>
  </div>
</div>

  <tr>
    <td><%= f.label :"フリガナ" %></td>
    <td><%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %></td>
    <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
  </tr>
  <tr>
    <td><%= f.label :"郵便番号" %></td>
    <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
  </tr>
  <tr>
    <td><%= f.label :"住所" %></td>
    <td><%= f.text_field :address, :size => "40*40", autofocus: true, autocomplete: "address" %></td>
  </tr>
  <tr>
    <td><%= f.label :"電話番号" %></td>
    <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
  </tr>
  <tr>
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "編集内容を保存" %></td>
  </tr>

</table>

<%= link_to "退会する", customers_unsubscribe_path %>


