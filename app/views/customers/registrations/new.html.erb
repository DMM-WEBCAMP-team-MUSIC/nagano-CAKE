<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<table>
  <tr>
    <td><%= f.label :名前 %></td>
    <td><%= f.label :"(姓)" %><%= f.text_field :family_name, autofocus: true, placeholder:"令和" %></td>
    <td><%= f.label :"(名)" %><%= f.text_field :first_name, placeholder:"道子" %></td>
  </tr>

  <tr>
    <td><%= f.label :フリガナ %></td>
    <td><%= f.label :"(セイ)" %><%= f.text_field :family_name_kana, placeholder:"レイワ" %></td>
    <td><%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, placeholder:"ミチコ" %></td>
  </tr>
  <tr>
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.email_field :email, placeholder:"sample@example.com" %></td>
  </tr>
  <tr>
    <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
    <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
  </tr>
  <tr>
    <td><%= f.label :"住所" %></td>
    <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "40*40" %></td>
  </tr>
  <tr>
    <td><%= f.label :"電話番号(ハイフンなし)" %></td>
    <td><%= f.text_field :phone_number, placeholder:"0000000000" %></td>
  </tr>
  <tr>
    <td><%= f.label :"パスワード(6文字以上)" %></td>
    <td><% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :"パスワード(確認用)" %><br /></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>

<h3>既に登録済みの方</h3>

<%= render "devise/shared/links" %>からログインしてください。

