<div class="container">
  <div class="row">
    <div class="col-2 p-5">
      <h4>ログイン</h4>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mx-auto">
    <div class="col-4 pt-2 text-light text-center">
      <h5>会員の方はこちら  <i class="far fa-hand-point-down"></i>  からログイン</h5>
    </div>
  </div>
</div>
<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-5">
      <div class="col-2 text-light text-left">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-10 text-left">
        <%= f.email_field :email,class: "form-control-sm", :size => "50*20" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-2 text-light text-left">
        <%= f.label :パスワード %>
      </div>
      <div class="col-10 text-left">
        <%= f.password_field :password,class: "form-control-sm" %>
      </div>
    </div>
    <div class="row">
      <div class="col-11 text-center">
        <%= f.submit "ログイン", class: "alert alert-secondary" %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-10 text-light text-right">
    <h3>会員登録がお済みでない方</h3><br />
    <%= render "customers/shared/links",class: "btn btn-info" %>
  </div>
</div>

