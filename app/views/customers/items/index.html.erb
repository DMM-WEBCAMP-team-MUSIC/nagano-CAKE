<div class="container">
  <div class="row my-3">
    <div class="col-sm-6">
      <h3>商品一覧</h3>
      <p>(全<%= @items.count %>件)</p>
    </div>
  </div>
</div>

  <div class="row pt-4 pl-4 justify-content-md-center mx-auto bg-light">
    <% @items.each do |item| %>
      <div class="col-md-3 ">
        <%= link_to attachment_image_tag(item, :image, :fill, 200, 200, fallback: "no_image.jpg"), item_path(item)  %>
        <p><%= item.name %></p>
        <p><%= number_to_currency(item.price, unit: "￥", precision: 0) %></p>
      </div>
    <% end %>
  </div>

</div>
