<div class="container">
  <div>
    <h1>商品一覧</h1>
    <p>(全<%= @items.count %>件)</p>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <%= link_to attachment_image_tag(item, :image, :fill, 100, 100, fallback: "no_image.jpg"), item_path(item)  %>
        <h5><%= item.name %></h5>
        <h5><%= number_to_currency(item.price, unit: "￥", precision: 0) %></h5>
      </div>
    <% end %>
  </div>
</div>
