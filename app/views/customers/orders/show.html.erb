<h1>注文履歴詳細</h1>
<h2>注文情報</h2>
<table border="1" style="border-collapse: collapse">
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.link_address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.status %></td>
  </tr>
</table>

<h2>請求情報</h2>
<table border="1" style="border-collapse: collapse">
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_fee %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.delivery_fee %></td>
  </tr>
  <tr>
    <th>請求額</th>
    <td><%= (@order.total_fee + @order.delivery_fee).to_s(:delimited) %></td>
  </tr>
</table>

<h2>注文内容</h2>
<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.ordered_items.each do |ordered_item| %>
    <tr>
      <td>
          <%= ordered_item.item.name %><br>
      </td>
      <td><%= (ordered_item.price*1.1).floor.to_s(:delimited) %></td>
      <td><%= ordered_item.quantity %></td>
      <td><%= ((ordered_item.item.price*1.1).floor*ordered_item.quantity).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>