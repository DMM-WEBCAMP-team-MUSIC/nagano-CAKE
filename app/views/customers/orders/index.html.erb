<h1>注文履歴一覧</h1>

<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.link_address %>
      </td>
      <td><% order.ordered_items.each do |ordered_item| %>
            <%= ordered_item.item.name %><br>
          <% end %>
      </td>
      <td><%= (order.total_fee + order.delivery_fee).to_s(:delimited) %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order) %></td>
    </tr>
    <% end %>
  </tbody>
</table>