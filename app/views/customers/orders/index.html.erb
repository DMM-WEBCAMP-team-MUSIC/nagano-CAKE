<div class="container">
  <div class="row">
    <div class="col-3 pt-5">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
</div>
<div class="container p-5">
  <div class="row">
  <table border="1" width="100%" style="border-collapse: collapse">
    <thead>
      <tr class="text-center text-light bg-secondary">
        <th class="pt-3 pb-3">注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="bg-light">
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.link_address %>
        </td>
        <td><% order.ordered_items.each do |ordered_item| %>
              <li class="pl-2"><%= ordered_item.item.name %></li>
            <% end %>
        </td>
        <td><%= (order.total_fee + order.delivery_fee).to_s(:delimited) %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", order_path(order) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

