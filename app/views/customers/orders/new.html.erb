<div class="container">
  <div>
    <h1>注文情報入力</h1>
  </div>
  <div>
    <%= form_with url: orders_path, method: :create, local: true do |f| %>
      <h2>支払方法</h2>
      <label><%= f.radio_button :payment, "クレジットカード"%>クレジットカード</label>
      <br>
      <label><%= f.radio_button :payment, "銀行振込"%>銀行振込</label>
      <h2>お届け先</h2>
      <div>
        <label><%= f.radio_button :radio_address, "own_address" %>ご自身の住所</label><br>
        <ul>
          <li>
            〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
            <%= current_customer.family_name %><%= current_customer.first_name %>
          </li>
          <li></li>
        </ul>
      </div>
      <div>
        <label><%= f.radio_button :radio_address, "registered_address" %>登録済み住所から選択</label><br>
        <%= f.collection_select(:shipping, @shippings, :id, :link_shipping )%><br>
      </div>
      <div>
        <label><%= f.radio_button :radio_address, "new_address" %>新しいお届け先</label><br>
        <div class="row">
          <div class="col-3">郵便番号(ハイフンなし)</div>
          <div class="col-7">
            <%= f.text_field :new_postal_code %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">住所</div>
          <div class="col-7">
            <%= f.text_field :new_address %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">宛名</div>
          <div class="col-7">
            <%= f.text_field :new_name %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
  