<div class="container my-3">
  <div class="row">
    <div class="col-sm-2 text-center bg-light">
      <h5>商品一覧</h5>
    </div>
  </div>
</div>
<div class="col-sm-10 text-right">
  <%= link_to "新規登録", new_admin_item_path,class: "alert alert-primary" %>
</div>
<div class="row justify-content-md-center">
  <div class="col-md-8 bg-light">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.status == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
