<div class="container my-4">
  <div class="row">
    <div class="col">
      <h4>商品一覧</h4>
    </div>
  </div>
</div>

<%= link_to "新規登録", new_admin_item_path %>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
      <% if item.status == true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>