<div class="container my-4">
  <div class="row">
    <div class="col-sm-6">
      <h4>商品詳細ページ</h4>
    </div>
  </div>
</div>

<div class="row mt-3 bg-light">
  <div class="offset-sm-1 col-am-3">
    <%= attachment_image_tag(@item, :image, :fill, 300, 300, fallback: "no_image.jpg") %>
  </div>
  <div class="col-sm-8 bg-light">
    <table class="table">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
    　     <td>商品説明</td>
    　     <td><%= @item.info %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= (@item.price*1.1).floor.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.status == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_item_path, class: "btn btn-dark" %>
  </div>
</div>
