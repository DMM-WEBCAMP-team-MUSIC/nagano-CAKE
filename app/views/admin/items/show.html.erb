<div class="container my-3 pt-5">
    <div class="row pb-4">
    　<h4 class="text-left">商品詳細ページ</h4>
    </div>
  <div class="row">
      <div class="col-3 my-4">
       <%= attachment_image_tag(@item, :image, :fill, 250, 250, fallback: "no_image.jpg") %>
      </div>
    <div class="col-8">
      <table class="table table-bordered bg-light">
          <tr>
            <td class="table-secondary">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
      　     <td class="table-secondary">商品説明</td>
      　     <td><%= @item.info %></td>
          </tr>
          <tr>
            <td class="table-secondary">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="table-secondary">税込価格（税抜価格）</td>
            <td><%= (@item.price*1.1).floor.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）</td>
          </tr>
          <tr>
            <td class="table-secondary">販売ステータス</td>
            <td>
              <% if @item.status == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
      </table>
    </div>
  </div>
    <div class="row justify-content-center">
     <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
    </div>
</div>
