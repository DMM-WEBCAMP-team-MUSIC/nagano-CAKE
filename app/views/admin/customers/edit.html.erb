<div>
  <h4><%= @customer.family_name %><%= @customer.first_name %>さんの会員編集<h4>

    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>



    <table>

    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %><td/>
    </tr>

    <tr>
      <td><%= f.label :name, "氏名" %></td>
      <td><%= f.text_field :family_name %></td>
      <td><%= f.text_field :first_name%></td>
    </tr>

    <tr>
      <td><%= f.label :kana, "フリガナ" %></td>
      <td><%= f.text_field :family_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>

    <tr>
      <td><%= f.label :postal_code, "郵便番号" %></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <td><%= f.label :phone_number, "電話番号" %></td>
      <td><%= f.text_field :phone_number %></td>
    </tr>

    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <td><%= f.label "会員ステータス" %></td>
      <td><%= f.radio_button :status, true  %><%= f.label "有効" %><%= f.radio_button :status, false %><%= f.label "退会" %></td>
    </tr>

    <tr>
      <td>
        <%= f.submit "変更を保存"%>
      </td>
    </tr>
    <% end %>


    </table>





</div>

