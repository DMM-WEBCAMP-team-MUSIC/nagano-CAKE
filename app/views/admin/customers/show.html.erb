<div class="container">
  <div class="row">
    <div class="col-4 mt-5">
      <h4><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>
</div>
<div class="container p-0 mt-5 bg-light">
  <div class="customer-image">
    <table class="table">
      <tr>
        <td class="pt-4 text-center">会員ID</td>
        <td class="pt-4"><%= @customer.id %></td>
      </tr>
      <tr>
        <td class="text-center">氏名</td>
        <td><%= @customer.family_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="text-center">フリガナ</td>
        <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="text-center">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="text-center">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="text-center">電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td class="text-center">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td class="pb-4 text-center">会員ステータス</td>
        <td> 
          <% if @customer.status == true %>
            有効
          <% else %> 
            退会
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col text-right">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "alert alert-danger" %>
      <%= link_to "注文履歴一覧を見る",admin_customer_orders_path(@customer), class: "alert alert-warning" %>
    </div>
  </div>
</div>