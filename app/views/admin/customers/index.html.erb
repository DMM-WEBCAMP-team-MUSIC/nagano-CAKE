<div>
  <h1>会員一覧</h1>
  <table class="table">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.family_name %><%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.status %></td>
      </tr>
    <% end %>
  </table>
</div>