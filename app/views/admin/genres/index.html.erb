<div class="container my-3">
  <div class="row">
    <div class="col-sm-3">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
</div>
<div class="container">
<div class="row">
  <div class="col-sm-1"></div>
    ジャンル名
    <div class="col-sm-1"></div>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <%= f.text_field :name, :placeholder => "ジャンル名" %>
      <%= f.submit "新規登録",class: "btn btn-info" %>
    <% end %>
  </div>
</div><br />

<div class="container">
  <div class="row bg-light">
    <div class="col-md-12">
      <table class="table">
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre),class: "alert alert-dark" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
  

