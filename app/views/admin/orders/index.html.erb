<div class="container">
  <div class="row">
    <div class="col-2 pt-5">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
</div>
<div class="container p-0 mt-5 bg-light">
  <table class="table">
    <tr class="text-light bg-secondary">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order) %></td>
      <td><%= order.customer.family_name + order.customer.first_name %></td>
      <td><%= order.ordered_items.count %></td>
      <% if order.status == "入金待ち" %>
        <td><%= order.status %></td>
      <% elsif order.status == "入金確認" %>
        <td><%= order.status %></td>
      <% elsif order.status == "製作中" %>
        <td><%= order.status %></td>
      <% elsif order.status == "発送準備中" %>
        <td><%= order.status %></td>
      <% elsif order.status == "発送済み" %>
        <td><%= order.status %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>

