<div class="container">
  <div class="row">
    <div class="col-2 pt-5">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
</div>
<div class="container p-0 mt-5 bg-light">
  <table class="table">
    <tr class="text-light bg-secondary">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.family_name + order.customer.first_name %></td>
      <td><%= order.count %></td>
      <% if order.status == 0 %>
        <td><%= order.status %></td>
      <% elsif order.status == 1 %>
        <td><%= order.status %></td>
      <% elsif order.status == 2 %>
        <td><%= order.status %></td>
      <% elsif order.status == 3 %>
        <td><%= order.status %></td>
      <% elsif order.status == 4%>
        <td><%= order.status %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>

<%= paginate @orders %>