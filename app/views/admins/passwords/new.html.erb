<div class="container">
  <div class="row">
    <div class="col-5 p-5">
      <h4>パスワードを忘れた場合</h4>
    </div>
  </div>
</div>
<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
    <div class="row mt-5">
      <div class="col-2 text-light text-left">
        <strong><%= f.label :メールアドレス %></strong>
      </div>
      <div class="col-6 text-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control-sm", :size => "50*20" %>
      </div>
      <div class="col-4">
        <%= f.submit "送信", autofocus: true, autocomplete: "email", class: "alert alert-secondary" %>
      </div>
    </div>
  <% end %>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-2 text-left">
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
